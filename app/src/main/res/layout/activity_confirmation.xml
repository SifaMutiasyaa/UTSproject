<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#E3F2FD"
    tools:context=".ConfirmationActivity"
    android:gravity="center">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_fastfood_24"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                app:tint="#2196F3"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Food"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1E88E5"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Food Name"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="4dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvFoodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#1E88E5"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number of Servings"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="4dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvServings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#1E88E5"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                   />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ordering Name"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="4dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvOrderingName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#1E88E5"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional Notes"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="4dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvAdditionalNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#1E88E5"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="Thanks for your order and please wait for delivering by nearest courier"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backtoMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#2196F3"
                android:padding="12dp"
                android:text="Back to Menu"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"
                tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
